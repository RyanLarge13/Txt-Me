{
  "name": "Your App Name",
  "short_name": "AppShort",
  "description": "A professional Progressive Web App that delivers a native-like experience across platforms.",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#000000",
  "theme_color": "#000000",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "id": "/",
  "categories": ["productivity", "utilities", "tools"],
  "iarc_rating_id": "e10+",

  "icons": [
    {
      "src": "/assets/icons/Txt-Me-Logo_192x192.png",
      "sizes": "192x192",
      "type": "image/jpg"
    },
    {
      "src": "/assets/icons/Txt-Me-Logo_512x512.png",
      "sizes": "512x512",
      "type": "image/jpg"
    },
    {
      "src": "/assets/icons/Txt-Me-Logo_1024x1024.png",
      "sizes": "1024x1024",
      "type": "image/jpg"
    }
  ],

  "screenshots": [
    {
      "src": "/assets/screenshots/screenshot-profile.PNG",
      "type": "image/png",
      "sizes": "540x960",
      "label": "Home screen"
    },
    {
      "src": "/assets/screenshots/screenshot-profile.PNG",
      "type": "image/png",
      "sizes": "540x960",
      "label": "Feature view"
    }
  ],

  "shortcuts": [
    {
      "name": "New Task",
      "short_name": "Task",
      "description": "Quickly create a new task",
      "url": "/tasks/new",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View your user profile",
      "url": "/profile",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192" }]
    }
  ],

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+yourapp",
      "url": "/?url=%s"
    }
  ],

  "permissions": ["periodic-background-sync", "notifications"],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.yourcompany.yourapp",
      "id": "com.yourcompany.yourapp"
    }
  ],

  "prefer_related_applications": false
}
