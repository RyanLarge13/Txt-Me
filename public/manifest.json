{
  "name": "Txt Me",
  "short_name": "TxtMe",
  "description": "A professional Progressive Web App that delivers a native-like experience across platforms",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#000000",
  "theme_color": "#000000",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "id": "/",
  "categories": ["productivity", "utilities", "tools"],
  "iarc_rating_id": "e10+",

  "icons": [
    {
      "src": "/assets/icons/Txt-Me-Logo_192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/Txt-Me-Logo_512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/assets/icons/Txt-Me-Logo_1024x1024.png",
      "sizes": "1024x1024",
      "type": "image/png"
    }
  ],

  "screenshots": [
    {
      "src": "/assets/screenshots/screenshot-profile.PNG",
      "type": "image/png",
      "sizes": "501x951",
      "label": "Home screen",
      "form_factor": "narrow"
    },
    {
      "src": "/assets/screenshots/screenshot-landscape.PNG",
      "type": "image/png",
      "sizes": "1353x648",
      "label": "Feature view",
      "form_factor": "wide"
    }
  ],

  "shortcuts": [
    {
      "name": "New Message",
      "short_name": "Message +",
      "description": "Create a new message",
      "url": "/messages",
      "type": "image/png",
      "purpose": "maskable",
      "icons": [{ "src": "/assets/icons/new-message.png", "sizes": "192x192" }]
    },
    {
      "name": "New Contact",
      "short_name": "Contact +",
      "description": "Create a new contact",
      "url": "/newcontact",
      "type": "image/png",
      "purpose": "maskable",
      "icons": [{ "src": "/assets/icons/new-contact.png", "sizes": "192x192" }]
    }
  ],

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+yourapp",
      "url": "/?url=%s"
    }
  ],

  "permissions": ["periodic-background-sync", "notifications"],

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.yourcompany.yourapp",
      "id": "com.yourcompany.yourapp"
    }
  ],

  "prefer_related_applications": false
}
